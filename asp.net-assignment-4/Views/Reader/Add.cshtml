@model Reader
@{
    ViewData["title"] = "Add a Reader";
}

<h1>New Reader:</h1>
<form method="post" asp-controller="Reader" asp-action="Add">
    <label asp-for="Name"></label>
    <input type="text" asp-for="Name" placeholder="Enter Name" />
    <div>
        <span asp-validation-for="Name"></span>
    </div>
    <label asp-for="Email"></label>
    <input type="email" asp-for="Email" placeholder="Enter Email" />
    <div>
        <span asp-validation-for="Email"></span>
    </div>
    <label asp-for="PhoneNumber"></label>
    <input type="tel" asp-for="PhoneNumber" placeholder="Enter PhoneNumber" />
    <div>
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <label asp-for="Address"></label>
    <input type="text" asp-for="Address" placeholder="Enter Address" />
    <div>
        <span asp-validation-for="Address"></span>
    </div>
    <button type="submit">Add</button>
</form>